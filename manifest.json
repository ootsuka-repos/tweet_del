{
  "manifest_version": 3,
  "name": "Tweet Deleter",
  "version": "1.0",
  "description": "Twitterのツイートを一括削除する拡張機能",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}