{
  "manifest_version": 3,
  "name": "Tweet Deleter (No API)",
  "version": "1.0.0",
  "description": "Delete your tweets by automating the web UI. No API keys.",
  "permissions": [
    "tabs",
    "debugger"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_title": "Tweet Deleter",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
