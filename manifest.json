{
  "manifest_version": 3,
  "name": "Twitter Tweet Deleter",
  "version": "1.0",
  "description": "Delete all your tweets easily.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Delete Tweets"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}